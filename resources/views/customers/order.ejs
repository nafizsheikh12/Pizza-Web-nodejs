<section class="orders ">
    <div class="container mx-auto pt-5">
          <h1 class="font-weight-bold">All Orders</h1>
          <% if(messages.success) { %>
          <div id="success-alert" class="d-flex items-center bg-success text-white" role="alert">
              <%= messages.success%>
          </div>
           <% } %>
          <table class="table mt-5 table-bordered">
             <thead>
                 <tr>
                    <th>Orders</th>
                    <th>Address</th>
                    <th>Time</th>
                 </tr>
             </thead>
             <tbody>
                 <% if(orders.length){ %>
                    <% orders.forEach((val) => { %>
                        <tr>
                            <td>
                                <a href="/"><%= val._id %></a>
                            </td>
                            <td>
                              <%= val.address %>
                            </td>
                            <td>
                               <%= val.createdAt %>
                            </td>
                        </tr>
                  <%  }) %>
                 
                 <%  }else { %>
                        <tr>
                            <td>No orders found</td>
                        </tr>
                    <% } %>
             </tbody>
          </table>
    </div>
</section>