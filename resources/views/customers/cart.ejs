
<% if(session.cart)  {%>
<section class="cart">
    <div class="order container mx-auto">
         <div class="d-flex items-center border-b">
             <img src="/img/cart-black.png"/>
             <h1 class="ml-4">Order Summary </h1>
         </div>

         <div class="pizza-list my-3">
             <% for(pizza of Object.values(session.cart.items)) { console.log(session.cart) %>

             <div class="d-flex items-center">
                 <img src="/img/<%= pizza.item.image  %>" class="w-25 cart-img"/>
                 <div class="pl-5 cart-title">
                     <h1><%= pizza.item.name  %></h1>
                     <span><%= pizza.item.size  %></span>

                 </div>
                 <span class="cart-pc"><%= pizza.qty  %>Pcs</span>
                 <span class="cart-prize">$<%= pizza.item.price * pizza.qty  %></span>
             </div>

             <% } %>
         </div>
         <hr/>
          <% if(user){ %>

         <div class="total-end">
             <div class="total-amount">Total Amount <span>$<%= session.cart.totalPrice %></span></div>
             <div>
                 <form class="m-3" action="/orders" method="POST">
                     <input type="text" class="form-control w-25" placeholder="Phone number" name="number"/>
                     <input type="text" class="form-control w-25 mt-3 ml-auto" placeholder="Address" name="address"/>
                     <button type="submit" class="btn btn-danger">Order Now</button>
                 </form>
             </div>
             <% }else{ %>
              <a class="btn btn-warning mb-5" href="/login">Login to continue</a>
              <% } %>
         </div>
    </div>
</section>
<% }else { %>

<div class="empty-cart mb-5">
    <div class="container text-center mt-5">
        <h1 class="text-bold">Cart empty</h1>
        <p>You probably havent't ordered a pizza yet To order a pizza, go to the main page.</p>
        <img src="/img/empty-cart.png" class="w-50 d-block m-auto"/>
    <div class="empty-cart mb-5">
     <a class="btn btn-primary text-white mt-5 " href="/">Go Back</a>
    </div>
</div>

<%}%>