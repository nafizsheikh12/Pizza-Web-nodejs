<section class="register shadow w-50 container p-5">
<form action="/register" method="POST" >
 
   <% if(messages.error) { %>
  <span class="text-danger"><%= messages.error %></span>
  <% } %>

    <div class="mb-3">
        <label class="form-label" for="exampleCheck1">Name</label>
      <input type="text" value=<%= 'messages.name' %> name="name" class="form-control" id="exampleCheck1">
     
    </div>


    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Email address</label>
      <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email" value=' <%=messages.email%> '/>
      <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Password</label>
      <input type="password" class="form-control" id="exampleInputPassword1" name="password">
    </div>
    
    <button type="submit" class="btn btn-warning">SIGN UP</button>
  </form>

</section>